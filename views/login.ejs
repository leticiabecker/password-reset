<% include shared/header.ejs %>

    <h1>Login</h1>

    <form method="post">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Username (E-mail)</label>
            <input name="username" id="username" class="form-control col-sm-2" type="email" aria-describedby="usernameHelp" placeholder="Enter your username"
                required />
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password</label>
            <input name="password" id="password" class="form-control col-sm-2" type="password" placeholder="Enter your password" required
            />
        </div>
        <div class="col-12">
            <div class="row">
                <button class="btn btn-warning col-1">Login</button>
            </div>
            <!-- .row -->
        </div>
        <hr />
        <p>Not signed up? Please
            <a href="/register" title="Register">Register</a> first! </p>
        <!-- add href to password reset-->
        <p>Forgot your Password? No worries!
            <a href="/forgot" title="Reset">Reset Password Here</a>
        </p>
    </form>

    <% include shared/footer.ejs %>